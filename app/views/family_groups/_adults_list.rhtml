<% unless @adults.nil? or @adults.empty? %>
<h3>Adultos</h3>
<table>
  <tr>
    <th>RUN</th>
    <th>Nombre</th>
    <th>Acciones</th>
  </tr>
  <% @adults.each do |a| %>
  <tr>
    <td><%= run a.run %></td>
    <td><%= a.fullname %></td>
    <td>
      <%= link_to image_tag('edit_family_group.png', :title => 'Editar grupo familiar'), :action => 'edit', :id => a.family_group %>
      <!--      <%= link_to image_tag('delete_family_group', :title=>'Eliminar grupo familiar'), {:action => 'delete', :id => a.family_group}, :confirm => '¿Está seguro que desea eliminar este GRUPO FAMILIAR, con todos sus adultos, alumnos y direcciones asociadas?' %> -->
    </td>
  </tr>
  <% end %>
</table>
<% end %>
